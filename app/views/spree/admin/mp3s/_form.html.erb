<div class="yui-g">
  <div class="yui-u first">
  <%= form_for([:admin, @product, @mp3], :html => { :multipart => true }) do |f| %>
    <fieldset>
      <legend><%=t 'upload_mp3' %></legend>
      <p class="form-buttons">

        <%= f.field_container :title do %>
          <%= f.label t("title") %> <span class="required">*</span><br/>
          <%= f.text_field :title %>
        <% end %>

        <%= f.field_container :file do %>
          <%= f.label :file, t("mp3_file") %> <span class="required">*</span><br/>
          <%= f.file_field :attachment %>
        <% end %>
        
        <%= hidden_field_tag 'mp3[product_id]', @product.id %>
        
        <%= button t("upload") %>
      </p>
      
    </fieldset>
  <% end %>
  </div>
</div><br/>